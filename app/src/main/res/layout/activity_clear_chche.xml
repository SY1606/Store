<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF2F2F2"
    >

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="@dimen/dp_64"
        android:background="#FF00A0E9"

        >

        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fan"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="缓存管理"
            android:textColor="#FFFFFFFF"
            android:layout_marginLeft="@dimen/dp_144"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textStyle="bold"

            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"
        >

    </View>

    <RelativeLayout
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#ffffff"

        >

        <TextView
            android:id="@+id/text_qing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_qing"
            android:text="清理缓存"
            android:textSize="@dimen/sp_15"
            android:textColor="#FF333333"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"

            />



        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/next"
            android:layout_toRightOf="@+id/text_qing"
            android:layout_marginLeft="@dimen/dp_233"
            android:layout_marginTop="@dimen/dp_15"
            />
    </RelativeLayout>
</LinearLayout>