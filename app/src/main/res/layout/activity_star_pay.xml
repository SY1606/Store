<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF2F2F2"
    tools:context=".view.activity.StarPayActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="#FF00A0E9"

        >
        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fan"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="星驿付"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="#FF00A0E9"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额(元)"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/zz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF2AD24"
        android:text="注：单笔限额1-50000元"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/hh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFE13D43"
        android:text="开启“提现功能”后可查看余额"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="visible"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/head"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/txgn_order"
            />
        <TextView
            android:id="@+id/tixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现功能"
            android:layout_toRightOf="@+id/head"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_9"
            android:textColor="#FF333333"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果想使用提现功能，请点击进行开启"
            android:layout_toRightOf="@+id/head"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_9"
            android:textColor="#FF999999"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/tixian"
            />

        <com.science.com.rchs.keyword.SwitchButton
            android:id="@+id/switchButton"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_29"
            app:borderWidth="0.8dp"
            app:animate="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tixain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        >

        <ImageView
            android:id="@+id/image_tixian"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/tx_order"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/text_tixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_tixian"
            android:text="提现"
            android:textSize="@dimen/sp_15"
            android:textColor="#FF333333"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            />

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/next"
            android:layout_toRightOf="@+id/text_tixian"
            android:layout_marginLeft="@dimen/dp_264"
            android:layout_marginTop="@dimen/dp_18"
            />

        <View
            android:id="@+id/views"
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_1"
            android:background="#FFEEEEEE"
            android:layout_below="@+id/image_tixian"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_15"
            >

        </View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/query"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/image_cha"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/cx_order"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"

            />
        <TextView
            android:id="@+id/text_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_cha"
            android:text="提现查询"
            android:textSize="@dimen/sp_15"
            android:textColor="#FF333333"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"

            />

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/next"
            android:layout_toRightOf="@+id/text_cha"
            android:layout_marginLeft="@dimen/dp_233"
            android:layout_marginTop="@dimen/dp_15"
            />

</RelativeLayout>

</LinearLayout>