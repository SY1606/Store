<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF2F2F2"
    tools:context=".view.activity.TixianActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="#FF00A0E9"

        >
        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fan"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_147"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        >



        <TextView
            android:id="@+id/zhanghu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额(元)"
            android:layout_toRightOf="@+id/head"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#FF999999"
            android:textSize="@dimen/sp_13"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"

            android:textSize="@dimen/sp_24"
            android:layout_below="@id/zhanghu"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"

            />

        <EditText
            android:id="@+id/vercode"
            android:layout_width="@dimen/dp_400"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="24sp"
            android:hint="请输入提现金额"
            android:textColor="#FF333333"
            android:paddingLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/zhanghu"
            android:imeOptions="actionNext"
            android:textColorHint="#FFCCCCCC"

          />
        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dp_345"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/vercode"
            android:background="#FFEEEEEE" />

        <TextView
            android:id="@+id/kti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现金额￥"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_13"
            />
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111.44"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toRightOf="@+id/kti"
            android:visibility="gone"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_13"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部提现"
            android:textColor="#FF00A0E9"
            android:textSize="@dimen/sp_13"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/hehe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <LinearLayout
        android:id="@+id/shuoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现说明"
            android:textColor="#ff666666"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            />

        <ImageView
            android:id="@+id/why"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/why"
            android:layout_marginLeft="@dimen/dp_5"
            />
    </LinearLayout>

</LinearLayout>