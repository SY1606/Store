<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/zhanghu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提现金额"
        android:layout_toRightOf="@+id/head"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#FF333333"
        android:textSize="@dimen/sp_14"
        />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥10.28"
            android:layout_marginTop="@dimen/dp_17"
            android:textColor="#FF00A0E9"
            android:textSize="@dimen/sp_16"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/shouxu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现手续费:￥1.00"
            android:layout_below="@+id/zhanghu"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            />
        <TextView
            android:id="@+id/daozhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际到账金额:￥1.00"
            android:layout_below="@+id/shouxu"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            />
        <View
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_below="@+id/daozhang"
            android:layout_marginTop="@dimen/dp_11"
            >

        </View>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-03-01 00:00:00:00"
            android:layout_below="@+id/views"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#FF999999"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现成功"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/views"
            android:textColor="#FF999999"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_12"

            />
    </RelativeLayout>

</LinearLayout>
