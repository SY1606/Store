<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_237"
    android:background="@drawable/fen2"
    android:layout_marginTop="@dimen/dp_60"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_21"
        android:text="时间选择"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        >

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:text="开始时间:"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_25"
            />

        <Button
            android:id="@+id/start_time"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_29"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/time"
            android:background="#FFF2F2F2"
            android:text="2019-03-05    00:00"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        >

        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:text="结束时间:"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_25"
            />
        <Button
            android:id="@+id/end_time"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_29"
            android:background="#FFF2F2F2"
            android:layout_toRightOf="@+id/times"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="2019-04-05   00:00"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14"
            />


    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <Button
                android:id="@+id/quxaio"
                android:layout_width="@dimen/dp_167"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/sel_but12"
                android:text="取消"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_16"
                />
            <Button
                android:id="@+id/queding"
                android:layout_width="@dimen/dp_167"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_but4"
                android:text="确定"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                />

        </LinearLayout>

</LinearLayout>
