<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF2F2F2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="#FF00A0E9"
        >

        <TextView
            android:id="@+id/bills"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="账单"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/shai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="筛选"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_14"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:visibility="gone"
            />
    </RelativeLayout>



    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/rvl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_148"
            android:background="#FFFFFFFF"
            >

            <TextView
                android:id="@+id/rec_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实收金额(元)"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#FF999999"
                android:layout_marginTop=   "@dimen/dp_15"
                android:textSize="@dimen/sp_13"
                />

            <TextView
                android:id="@+id/r_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#FF2281D2"
                android:textSize="@dimen/sp_20"
                android:layout_below="@+id/rec_money"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                />

            <TextView
                android:id="@+id/tr_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易成功笔数(笔)"
                android:layout_toRightOf="@+id/rec_money"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_114"
                android:textColor="#FF999999"

                />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/rec_money"
                android:layout_marginLeft="@dimen/dp_122"
                android:layout_below="@+id/tr_number"
                />

            <TextView
                android:id="@+id/tr_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额(元)"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#FF999999"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_13"
                android:layout_below="@id/r_money"
                />

            <TextView
                android:id="@+id/t_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#FF333333"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_20"
                android:layout_below="@+id/tr_money"

                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tui_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款金额(元)"
                android:layout_toRightOf="@+id/rec_money"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_114"
                android:textColor="#FF999999"
                android:layout_below="@+id/number"

                />

            <TextView
                android:id="@+id/tu_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/rec_money"
                android:layout_marginLeft="@dimen/dp_122"
                android:layout_below="@+id/tui_money"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_87"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFFFFFFF"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="vertical"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sim_dalisList"
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33"
                    app:placeholderImage="@drawable/qingdan"
                    android:layout_marginLeft="@dimen/dp_30"
                    />
                <TextView
                    android:id="@+id/dalisList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日结清单"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"

                android:orientation="vertical"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sim_refund"
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33"
                    app:placeholderImage="@drawable/men"
                    android:layout_marginLeft="@dimen/dp_52"
                    />
                <TextView
                    android:id="@+id/refund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店统计"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_42"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:visibility="gone"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sim_store"
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33"
                    app:placeholderImage="@drawable/xing"
                    android:layout_marginLeft="@dimen/dp_52"
                    />
                <TextView
                    android:id="@+id/store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星驿付"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_13"
                    android:layout_below="@id/sim_store"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_49"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:textColor="#FF333333"
                android:text="账单明细"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#EEEEEE"
                android:layout_marginTop="@dimen/dp_15"
                >


            </View>

            <ImageView
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_50"
                android:src="@drawable/nom"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/texts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:text="暂时没有数据~"
                android:textColor="#ffcccccc"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:divider="@null"
                ></android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </LinearLayout>
        </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
