<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".view.activity.FixedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="#FF00A0E9"
        >

        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fan"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="固定收款码"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/baocun"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="保存到相册"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/fucks"
        android:layout_width="@dimen/dp_325"
        android:layout_height="@dimen/dp_472"
        android:background="@drawable/wanda4"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center"

        >

        <TextView
            android:id="@+id/textss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_90"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_22"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_5"
            android:text="￥10.00"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_160"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            />

    </LinearLayout>

    <Button
        android:id="@+id/add"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"
        android:text="添加固定收款码"
        android:textColor="#ff00a0e9"
        android:textSize="16sp"
        android:background="@drawable/sel_but4"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center"

        />
</LinearLayout>