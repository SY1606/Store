<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".view.activity.OrderDalisActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="#FF00A0E9"

        >
        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fan"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收款金额"
        android:textColor="#ff333333"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        />

    <TextView
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="￥0.01"
        android:textColor="#ff00a0e9"
        android:textSize="@dimen/sp_32"

        android:layout_marginTop="@dimen/dp_20"
      android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_60"
        android:background="#ffffff"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款方式"
                android:textColor="#FF999999"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_30"
                />
            <TextView
                android:id="@+id/names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_15"
                android:text="微信支付"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_toRightOf="@+id/phone"
                />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/phone"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="#FFEEEEEE" />

            <TextView
                android:id="@+id/yanzheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="订单编号"
                android:textColor="#FF999999"

                android:textSize="@dimen/sp_14"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="@dimen/dp_30"

                />

            <TextView
                android:id="@+id/bianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:inputType="textMultiLine"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_toRightOf="@+id/yanzheng"
                android:layout_below="@+id/view1"
                />


            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/yanzheng"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="#FFEEEEEE" />



            <TextView
                android:id="@+id/nPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="交易时间"
                android:textColor="#FF999999"
                android:textSize="@dimen/sp_14"
                android:layout_below="@+id/view2"
                android:layout_marginLeft="@dimen/dp_30"

                />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_toRightOf="@+id/nPwd"
                android:layout_below="@+id/view2"
                />




            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/nPwd"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="#FFEEEEEE" />

            <TextView
                android:id="@+id/naPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="交易流水号"
                android:textColor="#FF999999"
                android:textSize="@dimen/sp_14"
                android:layout_below="@+id/view3"

                android:layout_marginLeft="@dimen/dp_30"

                />


            <TextView
              android:id="@+id/ids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/naPwd"
                android:layout_below="@+id/view3"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/naPwd"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="#FFEEEEEE" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <Button
            android:id="@+id/baocun"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/sel_but13"
            android:text="保存到相册"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="16sp"
            />
    </RelativeLayout>
</LinearLayout>