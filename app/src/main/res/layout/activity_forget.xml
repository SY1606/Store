<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/fan"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/back"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_42"
        android:textSize="@dimen/sp_30"
        android:text="找回密码"
        android:textColor="#FF333333"
        android:layout_marginTop="@dimen/dp_43"
        android:layout_marginLeft="@dimen/dp_25"
        />

    <LinearLayout
        android:id="@+id/member_activity_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_25">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            >
            <EditText
                android:id="@+id/f_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:inputType="number"
                android:textCursorDrawable="@drawable/btn3"
                android:digits="0123456789"
                android:maxLength="11"
                android:textSize="@dimen/sp_18"
                android:hint="请输入手机号"
                android:imeOptions="actionNext"
               />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFEEEEEE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30">


            <EditText
                android:id="@+id/new_pass"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:textSize="@dimen/sp_18"
                android:textCursorDrawable="@drawable/btn3"
                android:maxLength="20"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                android:hint="请输入新密码"
                android:imeOptions="actionNext"
             />


            <CheckBox
                android:layout_centerVertical="true"
                android:id="@+id/che1"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:button="@null"
                android:background="@drawable/btn1" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFEEEEEE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30">


            <EditText
                android:id="@+id/n_pass"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:textSize="@dimen/sp_18"
                android:textCursorDrawable="@drawable/btn3"
                android:hint="请再次输入新密码"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                android:imeOptions="actionNext"
               />
            <CheckBox
                android:layout_centerVertical="true"
                android:id="@+id/che2"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:button="@null"
                android:background="@drawable/btn1" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFEEEEEE" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30">

            <EditText
                android:id="@+id/na_pass"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:textSize="@dimen/sp_18"
                android:textCursorDrawable="@drawable/btn3"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="4"
                android:hint="请输入验证码"
                android:imeOptions="actionNext"
                />

            <TextView
                android:id="@+id/huoqu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:text="获取验证码"
                android:textColor="#ff00a0e9"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFEEEEEE" />

        <TextView
            android:id="@+id/rrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码不正确，请输入正确的验证码"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#FFE13D43"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码长度6-20位，字母、数字任意一种或两种"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_25"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/yz"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:text="请输入正确的验证码"
        android:textColor="#ffe13d43"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_25"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/mlogin"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/fucks"
        android:text="确定"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_125"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_38"/>
</LinearLayout>