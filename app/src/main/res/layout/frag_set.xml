<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF2F2F2"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_131"
        android:orientation="horizontal"
        android:background="#FF00A0E9"
        >

        <ImageView
            android:id="@+id/msimple"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_64"
          />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mtext_name"
                android:textSize="@dimen/sp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_52"
                android:textColor="#fff"
             />

            <Button
                android:id="@+id/mtext_qian"
                android:textSize="@dimen/sp_13"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_weight="1"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/yuan3"
                android:text="管理员"/>

        </LinearLayout>

</LinearLayout>

    <RelativeLayout
        android:id="@+id/choose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#FFFFFFFF"
        >
        <ImageView
            android:id="@+id/image_capacity"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/dian_set"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/text_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_capacity"
            android:textSize="@dimen/sp_15"
            android:textColor="#FF333333"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:textColor="#FF999999"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_35"
            />

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/next"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_sound"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/remind_set"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_15"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/text_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_sound"
                android:text="声音提醒"
                android:textSize="@dimen/sp_15"
                android:textColor="#FF333333"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:visibility="gone"
                />

            <com.suke.widget.SwitchButton
                android:id="@+id/switchButton"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_29"
                app:borderWidth="0.8dp"
                app:animate="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:visibility="gone"
                />

            <View
                android:id="@+id/views"
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_1"
                android:background="#FFEEEEEE"
                android:layout_below="@+id/image_sound"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:visibility="gone"
                >

            </View>

            <View
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_1"
                android:background="#FFEEEEEE"
                android:layout_below="@+id/text_sound"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:visibility="gone"
                >

            </View>

            <ImageView
                android:id="@+id/image_tui"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/tui_set"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_below="@+id/image_sound"
                />
            <TextView
                android:id="@+id/text_tui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_tui"
                android:text="推送提醒"
                android:textSize="@dimen/sp_15"
                android:textColor="#FF333333"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_below="@+id/text_sound"
                />

            <com.suke.widget.SwitchButton
                android:id="@+id/switchButton1"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_29"
                app:borderWidth="0.8dp"
                app:animate="true"
                android:layout_below="@+id/views"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15" />
            <View
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_1"
                android:background="#FFEEEEEE"
                android:layout_below="@+id/text_sound"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"

                android:visibility="gone"
                >

            </View>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"

            >

            <ImageView
                android:id="@+id/image_update"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/xgmm_set"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_16"
                />

            <TextView
                android:id="@+id/text_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_update"
                android:text="修改密码"
                android:textSize="@dimen/sp_15"
                android:textColor="#FF333333"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"

                />

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/next"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                />
        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"

            >

            <ImageView
                android:id="@+id/image_qing"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/delete_set"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_16"
                />

            <TextView
                android:id="@+id/text_qing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_qing"
                android:text="清理缓存"
                android:textSize="@dimen/sp_15"
                android:textColor="#FF333333"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"

                />

            <TextView
                android:id="@+id/numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5151"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_35"
                />

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/next"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_banben"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/banben_set"
                android:layout_marginTop="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_16"

                />

            <TextView
                android:id="@+id/text_banben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_banben"
                android:text="当前版本"
                android:textSize="@dimen/sp_15"
                android:textColor="#FF333333"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_29"

                />

            <TextView
                android:id="@+id/banben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_13"
                android:textColor="#999999"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_32"
                />
        </RelativeLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10"
            >

        <Button
            android:id="@+id/tuichu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#ffffff"
            android:text="退出登录"
            android:textSize="@dimen/sp_15"
            android:textColor="#FFE13D43"
            />
        </LinearLayout>


</LinearLayout>