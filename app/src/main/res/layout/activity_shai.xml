<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity_bill.ShaiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="#FF00A0E9"

        >
        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fan"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="筛选"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textStyle="bold"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/leixing"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="订单类型"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <RadioGroup
            android:id="@+id/rg_focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/leixing"

            android:layout_marginTop="@dimen/dp_20">
            <RadioButton
                android:id="@+id/a11"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_30"
                android:button="@null"
                android:text="全部"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:layout_weight="1"
                android:background="@drawable/fen1"
                android:layout_marginLeft="@dimen/sp_15"

                />
            <RadioButton
                android:id="@+id/pay"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_30"
                android:button="@null"
                android:text="支付宝"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/fen1"
                android:layout_marginLeft="@dimen/sp_15"
                />

            <RadioButton
                android:id="@+id/weixin"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_30"
                android:button="@null"
                android:text="微信"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/fen1"
                android:layout_marginLeft="@dimen/sp_15"
                />
            <RadioButton
                android:id="@+id/tui"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_30"
                android:button="@null"
                android:text="已退款"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/fen1"
                android:layout_marginLeft="@dimen/sp_15"
                android:layout_weight="1"
                />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adgsvsvs"
            />

        <FrameLayout
            android:id="@+id/frag_myfocus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </FrameLayout>


    </RelativeLayout>

</LinearLayout>
