<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF2F2F2"
    tools:context=".view.activity.MemListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="#FF00A0E9"

        >
        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fan"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="会员列表"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textStyle="bold"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#FF00A0E9"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_19"
                android:text="今日新增"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_68"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_13"

                />
            <TextView
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计会员"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_13"
                android:textColor="#FFFFFFFF"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_68"
                />
            <TextView
                android:id="@+id/number"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_25"
                android:text="0"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_89"
                android:textColor="#FFFFFFFF"
                android:layout_below="@+id/a"
                />

            <RelativeLayout
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_45"
                android:layout_below="@+id/b"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/leiji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#FFFFFFFF"
                    />


            </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/searchs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <EditText
            android:id="@+id/search"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_29"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:inputType="number"
            android:background="@drawable/search_edit_bg"
            android:paddingLeft="@dimen/dp_30"
            android:textCursorDrawable="@drawable/btn3"
            android:hint="请输入手机号搜索"
            android:textColor="#FF999999"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />


        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_alignLeft="@+id/edit_keywords"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fang" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_menlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <FrameLayout
            android:id="@+id/details_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>


</LinearLayout>