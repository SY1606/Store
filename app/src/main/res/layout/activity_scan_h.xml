<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="#FF00A0E9"

        >
        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fan"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扫码收款"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textStyle="bold"

            />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#FF333333"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_36"
                />

            <EditText
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:textColor="#404040"
                android:digits="0123456789"
                android:maxLength="11"
                android:textSize="@dimen/sp_15"
                android:imeOptions="actionNext"
                android:textColorHint="#FFCCCCCC" />

            <View
                android:id="@+id/view9"
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_1"
                android:background="#FFEEEEEE"
                android:layout_below="@+id/jm"
                android:layout_marginTop="@dimen/dp_68"
                android:layout_marginLeft="@dimen/dp_15"
                >
            </View>

            <EditText
                android:id="@+id/hexiao"
                android:layout_width="@dimen/dp_230"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:textColor="#404040"
                android:digits="0123456789"
                android:maxLength="12"
                android:hint="请输入核销码"
                android:textSize="@dimen/sp_15"
                android:textCursorDrawable="@drawable/btn3"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/dp_92"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColorHint="#FFCCCCCC" />

            <View
                android:id="@+id/view10"
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_1"
                android:background="#FFEEEEEE"
                android:layout_below="@+id/jm"
                android:layout_marginTop="@dimen/dp_123"
                android:layout_marginLeft="@dimen/dp_15"
                >
            </View>

            <Button
                android:id="@+id/sao"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_30"
                android:text="扫码"
                android:background="#FF00A0E9"
                android:textColor="#ffffff"
                android:layout_below="@+id/view9"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券不满足使用条件"
                android:layout_below="@+id/view10"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#FFE13D43"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"

                />
            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券过期或失效"
                android:layout_below="@+id/view10"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#FFE13D43"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/shou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实收金额"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_180"
                android:layout_marginLeft="@dimen/dp_15"

                />

            <TextView
                android:id="@+id/moneys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textColor="#ff00a0e9"
                android:textSize="@dimen/sp_25"
                android:layout_marginTop="@dimen/dp_173"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                />
            <Button
                android:id="@+id/mlogin"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/fucks"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_18"
                android:layout_below="@+id/moneys"
                android:layout_marginTop="@dimen/dp_75"
                android:layout_marginBottom="@dimen/dp_171"
                android:layout_marginLeft="@dimen/dp_38"
                android:layout_marginRight="@dimen/dp_38"

                />
            <Button
                android:id="@+id/ssss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fdafadadfs"
                android:layout_below="@+id/mlogin"
                android:visibility="gone"
                />
        </RelativeLayout>
</LinearLayout>