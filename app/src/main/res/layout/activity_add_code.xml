<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="#FF00A0E9"

        >
        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fan"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加固定收款码"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/insert_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:text="金额"
            />
        <EditText
            android:id="@+id/et_songname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textCursorDrawable="@drawable/btn3"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@null"
            android:maxLength="10"
            android:imeOptions="actionNext"
            android:hint="请输入金额"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#EEEEEE"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            >

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="名称"
            />
        <EditText
            android:id="@+id/et_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textCursorDrawable="@drawable/btn3"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@null"
            android:hint="请输入商品名称（选填）"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#EEEEEE"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            >

        </View>

    </LinearLayout>

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/fucks"
        android:text="确定"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/dp_15"
        />

    <ListView
        android:id="@+id/myListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        />


</LinearLayout>