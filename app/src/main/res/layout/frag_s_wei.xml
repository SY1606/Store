<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    >

   <TextView
       android:id="@+id/texts"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="选择时间"
       android:textSize="@dimen/sp_15"
       android:textColor="#FF333333"
       android:textStyle="bold"
       android:layout_marginTop="@dimen/dp_121"
       android:layout_marginLeft="@dimen/dp_15"
       />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp_20"
       >

      <TextView
          android:id="@+id/text_start_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="开始时间:"
          android:textSize="@dimen/sp_15"
          android:layout_marginTop="@dimen/dp_7"
          android:textColor="#FF333333"
          android:layout_marginLeft="@dimen/dp_15"

          />
      <Button
          android:id="@+id/start_time"
          android:layout_width="@dimen/dp_200"
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_height="@dimen/dp_35"
          android:layout_toRightOf="@+id/text_start_time"
          android:text="2013-03-05 - 00:00"
          android:textSize="@dimen/sp_14"
          android:background="#FFF2F2F2"
          android:textColor="#FF333333"
          />


      <TextView
          android:id="@+id/text_end_time"
          android:layout_width="wrap_content"

          android:layout_height="wrap_content"
          android:text="结束时间:"
          android:layout_below="@id/start_time"
          android:textSize="@dimen/sp_15"
          android:layout_marginTop="@dimen/dp_17"
          android:textColor="#FF333333"
          android:layout_marginLeft="@dimen/dp_15"
          />
      <Button
          android:id="@+id/end_time"
          android:layout_width="@dimen/dp_200"
          android:layout_height="@dimen/dp_35"
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_toRightOf="@+id/text_end_time"
          android:text="2013-03-05 - 00:00"
          android:layout_below="@+id/start_time"
          android:textSize="@dimen/sp_14"
          android:layout_marginTop="@dimen/dp_10"
          android:background="#FFF2F2F2"
          android:textColor="#FF333333"
          />

      <TextView
          android:id="@+id/choose"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="选择门店"
          android:textSize="@dimen/sp_15"
          android:textColor="#FF333333"
          android:textStyle="bold"
          android:layout_marginTop="@dimen/dp_121"
          android:layout_marginLeft="@dimen/dp_15"
          />
   </RelativeLayout>
   <RelativeLayout
       android:id="@+id/chooes"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <TextView
          android:id="@+id/all"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="点击选择门店"
          android:textSize="@dimen/sp_15"
          android:textColor="#FF333333"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_marginLeft="@dimen/dp_15"
          />
      <ImageView
          android:layout_width="@dimen/dp_14"
          android:layout_height="@dimen/dp_14"
          android:src="@mipmap/next"
          android:layout_marginTop="@dimen/dp_23"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/dp_15"
          />

   </RelativeLayout>


   <Button
       android:id="@+id/mlogin"
       android:layout_width="@dimen/dp_300"
       android:layout_height="@dimen/dp_40"
       android:layout_gravity="center_horizontal"
       android:background="@drawable/fucks"
       android:text="确定"
       android:textColor="#ffffff"
       android:textStyle="bold"
       android:textSize="18sp"
       android:layout_below="@+id/all"
       android:layout_marginTop="@dimen/dp_130"
       android:layout_marginBottom="@dimen/dp_171"
       android:layout_marginLeft="@dimen/dp_38"
       android:layout_marginRight="@dimen/dp_38"/>
</LinearLayout>
