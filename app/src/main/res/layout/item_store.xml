<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF2F2F2"
    tools:context=".view.activity.StoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_136"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"

        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路云智能家居"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="#FF333333"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#FFF2F2F2"
            android:layout_marginTop="@dimen/dp_15"
            >
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sim_s"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/sh_order2"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实收金额(元)"
                android:layout_toRightOf="@+id/sim_s"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_8"
                android:textColor="#FF333333"
                />
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_below="@id/sim_s"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_41"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_18"
                />

            <ImageView
                android:id="@+id/sim_j"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_170"
                android:layout_toRightOf="@+id/sim_s"
                android:src="@mipmap/sh_order1"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易成功笔数"
                android:layout_toRightOf="@+id/sim_j"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_8"
                android:textColor="#FF333333"
                />
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@id/sim_j"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_193"
                android:textColor="#FF333333"
                android:layout_toRightOf="@+id/sim_s"
                android:textSize="@dimen/sp_18"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>