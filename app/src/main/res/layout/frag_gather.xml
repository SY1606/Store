<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF2F2F2"

    >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/rvl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_157"
                    android:layout_gravity="center"
                    android:background="#FF00A0E9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/jiaju"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_13"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"

                        />

                    <LinearLayout
                        android:id="@+id/scans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/scan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginLeft="@dimen/dp_43"
                                android:layout_marginTop="@dimen/dp_32"
                                android:src="@mipmap/saomask" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_20"
                                android:layout_below="@id/scan"
                                android:layout_marginLeft="@dimen/dp_35"
                                android:layout_marginTop="@dimen/dp_12"
                                android:text="扫码收款"
                                android:textColor="#FFFFFFFF"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/self"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginLeft="@dimen/dp_55"
                                android:layout_marginTop="@dimen/dp_32"
                                android:src="@mipmap/gudingsk" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_20"
                                android:layout_below="@+id/self"
                                android:layout_marginLeft="@dimen/dp_40"
                                android:layout_marginTop="@dimen/dp_12"
                                android:text="自助支付码"
                                android:textColor="#FFFFFFFF"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/guding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginLeft="@dimen/dp_55"
                                android:layout_marginTop="@dimen/dp_32"
                                android:src="@mipmap/zizhuzf" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_20"
                                android:layout_below="@+id/self"
                                android:layout_marginLeft="@dimen/dp_40"
                                android:layout_marginTop="@dimen/dp_12"
                                android:text="固定收款码"
                                android:textColor="#FFFFFFFF"
                                android:textSize="@dimen/sp_14"

                                />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_170"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="今日明细"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/jiao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="交易金额(元)"
                            android:textColor="#FF999999"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/j_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/jiao"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="0.00"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:id="@+id/tui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_45"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_toRightOf="@+id/jiao"
                            android:text="退款金额(元)"
                            android:textColor="#FF999999"
                            android:textSize="@dimen/sp_13"

                            />

                        <TextView
                            android:id="@+id/t_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_45"
                            android:layout_marginTop="@dimen/dp_33"
                            android:layout_toRightOf="@+id/jiao"
                            android:text="0.00"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:id="@+id/shi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_164"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_toRightOf="@+id/jiao"
                            android:text="实收金额(元)"
                            android:textColor="#FF999999"
                            android:textSize="@dimen/sp_13"

                            />

                        <TextView
                            android:id="@+id/s_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_164"
                            android:layout_marginTop="@dimen/dp_33"
                            android:layout_toRightOf="@+id/jiao"
                            android:text="0.00"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:id="@+id/Nm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/j_m"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="新增会员"
                            android:textColor="#FF999999"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t_m"
                            android:layout_marginLeft="@dimen/dp_45"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_toRightOf="@+id/jiao"
                            android:text="发券数(张)"
                            android:textColor="#FF999999"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/chong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/s_m"
                            android:layout_marginLeft="@dimen/dp_164"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_toRightOf="@+id/jiao"
                            android:text="会员充值(元)"
                            android:textColor="#FF999999"
                            android:textSize="@dimen/sp_13" />


                        <TextView
                            android:id="@+id/n_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/Nm"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="0"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:id="@+id/send_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/send"
                            android:layout_marginLeft="@dimen/dp_45"
                            android:layout_toRightOf="@+id/jiao"
                            android:text="0"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:id="@+id/c_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/chong"
                            android:layout_marginLeft="@dimen/dp_164"
                            android:layout_toRightOf="@+id/jiao"
                            android:text="0"

                            android:textColor="#FF333333"
                            android:textSize="@dimen/sp_18" />

                    </RelativeLayout>

                </LinearLayout>


                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/cao" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_124"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/member"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="会员管理"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/xiaofei1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/sim_x"
                                android:layout_width="@dimen/dp_33"
                                android:layout_height="@dimen/dp_33"
                                android:layout_marginLeft="@dimen/dp_31"
                                android:layout_marginTop="@dimen/dp_15"
                                android:src="@mipmap/pay_home"
                                />

                            <TextView
                                android:id="@+id/x"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/sim_x"
                                android:layout_marginLeft="@dimen/dp_34"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="消费"
                                android:textColor="#FF333333"
                                android:textSize="@dimen/sp_13" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/huiyaun1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/sim_l"
                                android:layout_width="@dimen/dp_33"
                                android:layout_height="@dimen/dp_33"
                                android:layout_marginLeft="@dimen/dp_61"
                                android:layout_marginTop="@dimen/dp_15"
                                android:src="@mipmap/member_home" />

                            <TextView
                                android:id="@+id/l"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/sim_l"
                                android:layout_marginLeft="@dimen/dp_51"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="会员列表"
                                android:textColor="#FF333333"
                                android:textSize="@dimen/sp_13" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/kaika1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/sim_s"
                                android:layout_width="@dimen/dp_33"
                                android:layout_height="@dimen/dp_33"
                                android:layout_marginLeft="@dimen/dp_52"
                                android:layout_marginTop="@dimen/dp_15"
                                android:src="@mipmap/aa" />


                            <TextView
                                android:id="@+id/s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/sim_s"
                                android:layout_marginLeft="@dimen/dp_42"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="扫码开卡"
                                android:textColor="#FF333333"
                                android:textSize="@dimen/sp_13" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_124"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="活动管理"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/hexiao1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/as"
                                android:layout_width="@dimen/dp_33"
                                android:layout_height="@dimen/dp_33"
                                android:layout_marginLeft="@dimen/dp_30"
                                android:layout_marginTop="@dimen/dp_15"
                                android:src="@drawable/hexiao"
                                />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/as"
                                android:layout_marginLeft="@dimen/dp_14"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="优惠券核销"
                                android:textColor="#FF333333"
                                android:textSize="@dimen/sp_13" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/liebiao1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ad"
                                android:layout_width="@dimen/dp_33"
                                android:layout_height="@dimen/dp_33"
                                android:layout_marginLeft="@dimen/dp_45"
                                android:layout_marginTop="@dimen/dp_15"
                                android:src="@mipmap/lieb" />

                            <TextView
                                android:id="@+id/ls"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ad"
                                android:layout_marginLeft="@dimen/dp_29"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="优惠券列表"
                                android:textColor="#FF333333"
                                android:textSize="@dimen/sp_13" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/xinzeng1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ee"
                                android:layout_width="@dimen/dp_33"
                                android:layout_height="@dimen/dp_33"
                                android:layout_marginLeft="@dimen/dp_46"
                                android:layout_marginTop="@dimen/dp_15"
                                android:src="@mipmap/xinz" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ee"
                                android:layout_marginLeft="@dimen/dp_29"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="优惠券新增"
                                android:textColor="#FF333333"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
