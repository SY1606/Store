<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SacnActivity"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="#FF00A0E9"

        >
        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/fan"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扫码收款"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <EditText
            android:id="@+id/jine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#404040"
            android:maxLength="15"
            android:hint="请输入收款金额"
            android:textCursorDrawable="@drawable/btn3"
            android:textSize="@dimen/sp_15"
            android:imeOptions="actionNext"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/code"
            android:textColorHint="#FFCCCCCC" />
        <View
            android:id="@+id/view10"
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_1"
            android:background="#FFEEEEEE"
            android:layout_below="@+id/hexiao"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用优惠券付款"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="#FF2281D2"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                />
            <include
                layout="@layout/include_keyboardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:visibility="visible"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>



    </LinearLayout>



</LinearLayout>