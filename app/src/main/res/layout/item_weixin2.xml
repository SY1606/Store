<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"

        >

        <ImageView
            android:id="@+id/tu1"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/tui_order" />

        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信退款(元)"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_15"
            android:layout_toRightOf="@+id/tu1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/money1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-55.01"
            android:textColor="#FFE13D43"
            android:textSize="@dimen/sp_18"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_58"
            android:layout_below="@+id/tu1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFEEEEEE"
            >

        </View>
        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易时间：2019-03-01 21:14:01"
            android:layout_below="@+id/view"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_58"
            android:layout_marginTop="@dimen/dp_49"
            android:textColor="#FF999999"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款成功"
            android:layout_marginTop="@dimen/dp_49"
            android:textColor="#FFE13D43"
            android:layout_below="@id/view"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号:304037273177"
            android:layout_below="@+id/view"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_58"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="#FF999999"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#EEEEEE"
            android:layout_below="@+id/time1"
            android:layout_marginTop="@dimen/dp_15"
            >

        </View>
    </RelativeLayout>

</LinearLayout>
